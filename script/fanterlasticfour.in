#!/usr/bin/env bash

# Exit reasons:
# 0: Success
# 1: Unrecognized option.
# 2: Unrecognized action (should be either "start" or "stop").
# 3: Can't start, already runnig (or so it seems).
# 4: Can't stop, not running (or so it seems).

#==============================================================
#Defaults, can be customized in CONFIGFILE
NAME="fanterlasticfour"

RUNDIR="@RUNDIR@"
LOGDIR="@LOGDIR@"
PIPEDIR="@PIPEDIR@"

ERL="@ERL@"
RUN_ERL="@RUN_ERL@"
ERL_CALL="@ERL_CALL@"
#==============================================================

ACTION="start"
VERBOSE=0
CONFIGFILE="@CONFIGFILE@"
NAMEFILE="$RUNDIR/fanterlasticfour.name"

while getopts ":a:c:v" Option; do
    case $Option in
        a)
            ACTION="$OPTARG"
            ;;
        c)
            CONFIGFILE="$OPTARG"
            ;;
        v)
            VERBOSE=1
            ;;
        *)
            echo "Unrecognized option."
            exit 1;
            ;;
    esac
done

if [ -r $CONFIGFILE ] ; then
    source $CONFIGFILE
else
    echo "WARNING: could not read config file $CONFIGFILE. Continuing with defaults."
fi

case "$ACTION" in
    "start")
        COMMAND="$RUN_ERL -daemon $PIPEDIR/ $LOGDIR/ \"$ERL -sname $NAME -boot fanterlasticfour -config $CONFIGPREFIX/fanterlasticfour/fanterlasticfour\""
        if [[ $VERBOSE == 1 ]] ; then
            echo "Starting." 
            # Echo the line.
            echo $COMMAND
        fi

        # Are we (likely to be) already running ?
        if [ -e $NAMEFILE ] ; then
            echo "ERROR: File $NAMEFILE exists. Probably you have another Fanterlastic Four instance running. Aborting."
            exit 3
        fi

        # Save the name for future reference.
        mkdir -p "$RUNDIR"
        echo "$NAME" > "$NAMEFILE"

        # Run Fanterlastic Four.
        $COMMAND

        if [[ $VERBOSE == 1 ]] ; then
            echo "Done."
        fi
        ;;

    "stop")
        if [ -r $NAMEFILE ] ; then
            # Get the name of the node we want to stop.
            NAME=$(cat $NAMEFILE)
        else
            echo "ERROR: File $NAMEFILE doesn't exist or is not readable. Aborting."
            exit 4
        fi

        COMMAND="$ERL_CALL -sname $NAME -a \"init stop\""

        if [[ $VERBOSE == 1 ]] ; then
            echo "Stoping."
            echo $COMMAND
            $COMMAND
        else
            $COMMAND &> /dev/null
        fi

        # Remove the name file.
        rm $NAMEFILE

        if [[ $VERBOSE == 1 ]] ; then
            echo "Done."
        fi
        ;;
    *)
        echo "Action should be either \"start\" or \"stop\"."
        exit 2
        ;;
esac
